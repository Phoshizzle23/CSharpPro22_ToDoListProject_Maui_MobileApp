<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoListApp.Views.HeaderGrid">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="1" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>

         <!--Column Headers--> 
        <Label Grid.Row="0" Grid.Column="0" Text="" />
        <Label Grid.Row="0" Grid.Column="1" Text="NAME" HorizontalOptions="Start" Margin="-15,0,0,0" VerticalOptions="Center" FontAttributes="Bold" />
        <Label Grid.Row="0" Grid.Column="2" Text="TASK" HorizontalOptions="Center" Margin="-20,0,0,0" VerticalOptions="Center" FontAttributes="Bold" />
        <Label Grid.Row="0" Grid.Column="3" Text="DATE" HorizontalOptions="Center" Margin="-15,0,0,0" VerticalOptions="Center" FontAttributes="Bold" />
        <Label Grid.Row="0" Grid.Column="4" Text="DONE" HorizontalOptions="Start" VerticalOptions="Center" FontAttributes="Bold" />
        <BoxView HeightRequest="1" Grid.Row="5" Grid.ColumnSpan="5" Color="{AppThemeBinding Dark=white, Light=black}" />
    </Grid>
</ContentView>
